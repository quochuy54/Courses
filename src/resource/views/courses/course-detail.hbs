<div class="mt-4">
    <div class="row">
        <div class="col-lg-3">
           <ul class="list-group">
            <li class="list-group-item">Các khóa học khác</li>
            {{#each courseList}}
                <li class="list-group-item">
                    <a style="text-decoration: none;" href="{{this.slug}}">{{this.name}}</a>
                </li>
            {{/each}}
            </ul>
        </div>   
        <div class="col-lg-9">
            <h2>{{course.name}}</h2>
            <iframe width="663" height="400" src="https://www.youtube.com/embed/{{course.videoId}}" 
            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen class="mt-4"></iframe>
            <br>
            <span class="mt-3" style="font-weight: bold; display: block;">Mô tả:</span>
            <p class="mt-1">{{course.description}}</p>
        </div>   
    </div>
</div>